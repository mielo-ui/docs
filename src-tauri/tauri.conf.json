{
  "productName": "Mielo",
  "version": "1.0.0",
  "identifier": "com.mielo.dev",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      { 
        "dragDropEnabled": true,
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "title": "Mielo",
        "width": 500,
        "height": 600,
        "minHeight": 400,
        "minWidth": 400
      }
    ]
  }
}